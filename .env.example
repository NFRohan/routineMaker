# Copy this file to .env and update with your values
# NEVER commit .env to version control!

# Database Configuration
POSTGRES_USER=bookshare
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=bookshare
DATABASE_URL=postgresql://bookshare:your_secure_password_here@db:5432/bookshare

# Auth Service
AUTH_SECRET_KEY=generate_a_secure_random_key_here
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Backend Service
BACKEND_SECRET_KEY=generate_a_secure_random_key_here

# Note: Generate secure keys with: python -c "import secrets; print(secrets.token_urlsafe(32))"
